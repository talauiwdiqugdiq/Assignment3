<%- include('./Partials/header'); -%> 

<%- include('./Partials/main_nav'); -%> 

<div class="container my-5"> <!-- main container with top and bottom margin (my-5) to center the content horizontally and add spacing vertically -->
    <div class="text-center"> <!-- centers all the content inside this div horizontally -->
        <h1 class="display-4" style="color: #1a73e8;">Welcome to Your Workout Tracker!</h1> <!-- large display style and custom blue color -->
        <p class="lead mb-4" style="color: #555;">Track your fitness journey, analyze your progress, and achieve your goals!</p> <!--used lead class for emphasis and bottom margin (mb-4) for spacing -->
        <div class="row justify-content-center"> <!-- creates a flexbox row and centers its contents horizontally -->
            <div class="col-md-4 mb-4"> <!-- defines a responsive column that spans 4 out of 12 columns on medium screens with bottom margin for spacing -->
                <div class="card h-100 shadow-lg border-0" style="border-radius: 12px;"> <!-- card component with full height (h-100), shadow effect, no border, and rounded corners -->
                    <div class="card-body text-center"> <!-- card body with centered text alignment -->
                        <i class="fas fa-dumbbell fa-3x mb-3" style="color: #28a745;"></i> <!-- font awesome icon of a dumbbell, styled with a large size (fa-3x) and green color -->
                        <h5 class="card-title">View Workouts</h5> 
                        <p class="card-text">See your complete list of workouts and track your progress over time.</p> 
                        <a href="/workoutlist" class="btn btn-success" style="border-radius: 12px;">View Workouts</a> <!-- styled as a green button with rounded corners -->
                    </div>
                </div>
            </div>
        </div> 

        <div class="mt-5"> <!-- adds a top margin to separate this section from the cards above -->
            <h3 style="color: #1a73e8;">Stay Consistent, Stay Strong!</h3> <!-- heading with blue color -->
            <p class="text-muted">"The only bad workout is the one you didn't do."</p> <!-- quote with muted (light grey) text style -->
            <a href="/workoutlist/add" class="btn btn-outline-primary btn-lg" style="border-radius: 12px;">Start Now</a> 
        </div> 
    </div> 
</div> 

<%- include('./Partials/footer'); -%> 
