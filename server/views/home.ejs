<%- include('./Partials/header'); -%> 
<%- include('./Partials/main_nav'); -%> 

<!-- home page content -->
<div class="container my-5">
    <div class="text-center">
        <!-- main title and description -->
        <h1 class="display-4" style="color: #1a73e8;">Welcome to Your Workout Tracker!</h1> <!-- main welcome message -->
        <p class="lead mb-4" style="color: #555;">Track your fitness journey, analyze your progress, and achieve your goals!</p> <!-- brief description -->

        <!-- cards section for user actions -->
        <div class="row justify-content-center">
            <!-- view workout list card -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg border-0" style="border-radius: 12px;">
                    <!-- card body with icon, title, text, and button -->
                    <div class="card-body text-center">
                        <!-- icon representing workouts -->
                        <i class="fas fa-dumbbell fa-3x mb-3" style="color: #28a745;"></i> <!-- dumbbell icon for workouts -->
                        <h5 class="card-title">View Workouts</h5> <!-- card title -->
                        <p class="card-text">See your complete list of workouts and track your progress over time.</p> <!-- description of the action -->
                        <!-- button linking to the workout list page -->
                        <a href="/workoutlist" class="btn btn-success" style="border-radius: 12px;">View Workouts</a> <!-- button to view workouts -->
                    </div>
                </div>
            </div>

        </div> 

        <!-- motivational section -->
        <div class="mt-5">
            <h3 style="color: #1a73e8;">Stay Consistent, Stay Strong!</h3> <!-- motivational heading -->
            <p class="text-muted">"The only bad workout is the one you didn't do."</p> <!-- motivational quote -->
            <!-- button to start adding a workout -->
            <a href="/workoutlist/add" class="btn btn-outline-primary btn-lg" style="border-radius: 12px;">Start Now</a> <!-- button to start logging workouts -->
        </div> 
    </div> 
</div> 

<%- include('./Partials/footer'); -%> 
