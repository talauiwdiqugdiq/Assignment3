<%- include('Partials/header'); -%>
<%- include('Partials/main_nav'); -%>
<!-- Content for the edit Operation -->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-7">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Your Name" name="Name" value="<%= Workout.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="workoutTypeTextField">What type of workout did you complete today?</label>
                    <input type="text" class="form-control" id="workoutTypeTextField" placeholder="Enter the Workout Type" name="WorkoutType" value="<%= Workout.WorkoutType %>" required>
                </div>
                <div class="form-group">
                    <label for="exerciseDetailsTextArea">Which exercises did you perform, and how many sets/reps did you complete?</label>
                    <input type="text" class="form-control" id="exerciseDetailsTextArea"  placeholder="Enter Exercise Details" name="ExerciseDetails" value="<%= Workout.ExerciseDetails %>" required>
                </div>
                <div class="form-group">
                    <label for="durationTextField">How long was your workout session?</label>
                    <textarea type="text" class="form-control" id="durationTextField" placeholder="Enter Duration in minutes" name="Duration" required><%= Workout.Duration %></textarea>
                </div>
                <div class="form-group">
                    <label for="performanceRatingTextField">How would you rate your performance today on a scale of 1 to 10?</label>
                    <textarea type="text" class="form-control" id="performanceRatingTextField" placeholder="Enter a number from 1-10" name="PerformanceRating" required><%= Workout.PerformanceRating %></textarea>
                </div>
                <div class="form-group">
                    <label for="fitnessGoalSettingTextArea">Would you like to set a fitness goal for this week?</label>
                    <input type="text" class="form-control" id="fitnessGoalSettingTextArea"  placeholder="Enter Yes or No" name="FitnessGoalSetting" value="<%= Workout.FitnessGoalSetting %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include('Partials/footer'); -%>