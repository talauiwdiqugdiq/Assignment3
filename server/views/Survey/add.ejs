<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!-- Content for Add Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Your Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Job Title</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Job Title" name="JobTitle" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Are you satisfied with your job?</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter Yes or No" name="Satisfaction" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">How long have you been with the company?</label>
                    <input type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter the Duration of Employment in years" name="DurationOfEmployment" required>
                <div class="form-group">
                    <label for="priceTextField">What changes would improve your job satisfaction?</label>
                    <textarea type="text" class="form-control" id="priceTextField" placeholder="Describe the suggested improvement" name="Improvments" required></textarea>
                </div>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>
